    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCapture"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Result:"
        android:textColor="@color/endColorOnBoard"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCapture"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/txtResult"
        android:fontFamily="@font/poppins_medium"
        android:text="Output"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtClickHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/startColorOnboard"
        android:fontFamily="@font/poppins_medium"
        android:text="Click on the text to search on google"
        android:textSize="15sp"
        android:textStyle="normal" />


</RelativeLayout>