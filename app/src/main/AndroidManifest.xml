        android:supportsRtl="true"
        android:theme="@style/Theme.BirdsEyeView_part2"

        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCynnp0zFOL2s9Vxcf3RbH-7S8VEYXZcj"/>
        <meta-data
            android:name="android.app.lib_name"
            android:value="" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <service
            android:name=".MapPage"
            android:foregroundServiceType="location" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".accounts.LoginActivity"
            android:exported="false"/>
        <activity
            android:name=".accounts.SignUpActivity"
            android:exported="false"/>
        <activity
            android:name=".ExploreBirdsPage"
            android:exported="false"/>
